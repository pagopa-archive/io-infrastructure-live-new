        "parameters": [
          {
            "name": "email",
            "in": "path",
            "type": "string",
            "format": "email",
            "required": true,
            "description": "The email of the User"
          },
          {
            "name": "subscription_id",
            "in": "path",
            "type": "string",
            "required": true,
            "description": "The id of the Subscription"
