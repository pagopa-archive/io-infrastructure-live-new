    "/users": {
      "get": {
        "summary": "Gets the list of users",
        "operationId": "getUsers",
        "parameters": [
          {
            "name": "cursor",
            "description": "the number of items to skip.",
            "in": "query",
            "type": "integer",
            "minimum": 1
